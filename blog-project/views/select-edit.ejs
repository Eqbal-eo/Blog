<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <title>تعديل تدوينة</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Tajawal', sans-serif;
            background-color: #f8f9fa;
        }

        .form-box {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="#">لوحة التحكم</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav ms-auto mb-1 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/posts/create">➕ إنشاء تدوينة</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/posts/select-edit">✏️ تعديل تدوينة</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/posts/select-delete">🗑️ حذف تدوينة</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/logout">تسجيل الخروج</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- محتوى الصفحة -->
    <div class="container">
        <h2 class="mb-4">✏️ تعديل تدوينة</h2>

        <% if (posts.length===0) { %>
            <div class="alert alert-info">لا توجد تدوينات لتعديلها.</div>
            <% } else { %>
                <div class="form-box">
                    <form id="editForm" action="" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="mb-3">
                            <label for="postSelector" class="form-label">اختر التدوينة</label>
                            <select id="postSelector" class="form-select" required>
                                <option disabled selected>اختر تدوينة لتعديلها</option>
                                <% posts.forEach(post=> { %>
                                    <option value="<%= post.id %>" data-title="<%- post.title %>"
                                        data-content="<%- post.content %>">
                                        <%= post.title %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="title" class="form-label">العنوان</label>
                            <input type="text" class="form-control" id="title" name="title" required>
                        </div>

                        <div class="mb-3">
                            <label for="content" class="form-label">المحتوى</label>
                            <textarea class="form-control" id="content" name="content" rows="6" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">💾 حفظ التعديلات</button>
                        <a href="/dashboard" class="btn btn-secondary">العودة إلى لوحة التحكم</a>
                    </form>
                </div>
                <% } %>
    </div>

    <script>
        const postSelector = document.getElementById('postSelector');
        const titleInput = document.getElementById('title');
        const contentInput = document.getElementById('content');
        const form = document.getElementById('editForm');
    
        postSelector.addEventListener('change', function () {
            const selectedOption = this.options[this.selectedIndex];
            const postId = selectedOption.value;
            const title = selectedOption.getAttribute('data-title');
            const content = selectedOption.getAttribute('data-content');
    
            // تعبئة الحقول
            titleInput.value = title;
            contentInput.value = content;
    
            // ضبط رابط الفورم للإرسال
            form.action = `/posts/edit/${postId}`;
        });
    </script>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
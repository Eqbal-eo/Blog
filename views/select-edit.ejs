<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تعديل تدوينة | مدونات آفاق</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link rel="stylesheet" href="/js/css/editor.css">
    <link rel="stylesheet" href="/js/css/dashboard.css">
    <link rel="stylesheet" href="/js/css/footer.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg custom-navbar mb-4">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <i class="bi bi-grid-fill me-2"></i>لوحة التحكم
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/posts/create">
                            <i class="bi bi-plus-circle-fill"></i> إنشاء تدوينة
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/posts/select-edit">
                            <i class="bi bi-pencil-square"></i> تعديل تدوينة
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/posts/select-delete">
                            <i class="bi bi-trash3"></i> حذف تدوينة
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/settings">
                            <i class="bi bi-gear"></i> الإعدادات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/logout">
                            <i class="bi bi-box-arrow-left"></i> تسجيل الخروج
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
        <div class="posts-box fadeIn">
            <h3>
                <i class="bi bi-pencil-square me-2"></i>
                <strong>تعديل تدوينة</strong>
            </h3>

            <% if (posts.length === 0) { %>
                <div class="alert alert-info mt-4">
                    <i class="bi bi-info-circle me-2"></i>
                    لا توجد تدوينات لتعديلها.
                </div>
            <% } else { %>
                <form id="editForm" method="POST" class="mt-4">
                    <input type="hidden" name="_method" value="PUT">
                    
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="mb-4">
                                <label for="postSelector" class="form-label fw-bold">اختر التدوينة</label>
                                <select id="postSelector" class="form-select form-select-lg" required>
                                    <option disabled selected>اختر تدوينة لتعديلها</option>
                                    <% posts.forEach((post, i) => { %>
                                        <option value="<%= post.id %>" data-index="<%= i %>"><%= post.title %></option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="mb-4">
                                <label for="title" class="form-label fw-bold">عنوان التدوينة</label>
                                <input type="text" class="form-control form-control-lg" id="title" name="title" required
                                    placeholder="أدخل عنوان التدوينة هنا...">
                            </div>

                            <div class="mb-4">
                                <label for="editor" class="form-label fw-bold">محتوى التدوينة</label>
                                <div id="editor" class="rounded"></div>
                                <input type="hidden" name="content" id="contentInput">
                            </div>

                            <div class="action-card mt-4">
                                <h5 class="mb-3">
                                    <i class="bi bi-gear-fill me-2"></i>
                                    إعدادات النشر
                                </h5>

                                <div class="mb-3">
                                    <label for="category" class="form-label">تصنيف التدوينة</label>
                                    <select class="form-select" id="category" name="category" required>
                                        <option value="" disabled selected>اختر تصنيفاً</option>
                                        <option value="politics">سياسة</option>
                                        <option value="history">تاريخ</option>
                                        <option value="economics">اقتصاد</option>
                                        <option value="technology">تكنلوجيا</option>
                                        <option value="literature">أدب</option>
                                        <option value="medicine">طب</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="status" class="form-label">حالة التدوينة</label>
                                    <select id="status" name="status" class="form-select" required>
                                        <option value="published">منشورة</option>
                                        <option value="draft">مسودة</option>
                                    </select>
                                </div>

                                <div class="mb-4">
                                    <label for="created_at" class="form-label">تاريخ النشر</label>
                                    <input type="datetime-local" class="form-control" id="created_at" name="created_at" required>
                                </div>

                                <div class="btn-container">
                                    <button type="submit" class="btn btn-primary">
                                        حفظ التعديلات
                                    </button>
                                    <a href="/dashboard" class="btn btn-outline-secondary">
                                        إلغاء
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            <% } %>
        </div>
    </div>

    <footer>
        <div class="container">
            مدونات آفاق | منصة للتدوين الثقافي والفكري © <%= new Date().getFullYear() %>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

    <% if (posts.length > 0) { %>
        <script>
            const posts = <%- JSON.stringify(posts) %>;

            const quill = new Quill('#editor', {
                theme: 'snow',
                placeholder: 'اكتب محتوى التدوينة هنا...',
                modules: {
                    toolbar: [
                        [{ 'header': [1, 2, 3, false] }],
                        [{ 'size': ['small', false, 'large', 'huge'] }],
                        ['bold', 'italic', 'underline'],
                        [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                        [{ 'align': [] }],
                        ['link', 'image'],
                        ['blockquote', 'code-block'],
                        [{ 'color': [] }, { 'background': [] }],
                        [{ 'direction': 'rtl' }],
                        ['clean']
                    ]
                }
            });

            // Set default text direction to RTL
            quill.format('direction', 'rtl');

            const postSelector = document.getElementById('postSelector');
            const titleInput = document.getElementById('title');
            const contentInput = document.getElementById('contentInput');
            const statusSelect = document.getElementById('status');
            const form = document.getElementById('editForm');

            postSelector.addEventListener('change', function() {
                const selectedIndex = this.options[this.selectedIndex].dataset.index;
                const post = posts[selectedIndex];

                titleInput.value = post.title;
                quill.root.innerHTML = post.content;
                statusSelect.value = post.status;
                document.getElementById('category').value = post.category || '';

                // Format the date for datetime-local input
                const date = new Date(post.created_at);
                const formattedDate = date.toISOString().slice(0, 16); // Format: YYYY-MM-DDTHH:mm
                document.getElementById('created_at').value = formattedDate;

                form.action = `/posts/edit/${post.id}`;
            });

            form.addEventListener('submit', function() {
                contentInput.value = quill.root.innerHTML;
            });
        </script>
    <% } %>
</body>

</html>

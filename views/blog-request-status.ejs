<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>حالة طلب المدونة - مدونات آفاق</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/js/css/home.css">
    <link rel="stylesheet" href="/js/css/footer.css">
    <style>
        .status-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 2rem;
        }
        
        .status-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            padding: 2rem;
            margin-bottom: 2rem;
        }
        
        .status-pending {
            border-left: 4px solid #f39c12;
        }
        
        .status-approved {
            border-left: 4px solid #27ae60;
        }
        
        .status-rejected {
            border-left: 4px solid #e74c3c;
        }
        
        .status-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
        
        .status-pending .status-icon {
            color: #f39c12;
        }
        
        .status-approved .status-icon {
            color: #27ae60;
        }
        
        .status-rejected .status-icon {
            color: #e74c3c;
        }
        
        .search-form {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            padding: 2rem;
            margin-bottom: 2rem;
        }
        
        .page-header {
            text-align: center;
            margin-bottom: 3rem;
            padding: 2rem 0;
        }
        
        .page-header h1 {
            color: #8c4a21ca;
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }
        
        .request-details {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1.5rem;
            margin-top: 1.5rem;
        }
        
        .detail-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #e9ecef;
        }
        
        .detail-row:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }
        
        .detail-label {
            font-weight: 600;
            color: #495057;
        }
        
        .detail-value {
            color: #6c757d;
        }
          .rejection-reason {
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 6px;
            padding: 1rem;
            margin-top: 1rem;
            color: #721c24;
        }
        
        .invite-code-section {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border: 2px solid #28a745;
        }
        
        .invite-code-display {
            font-family: 'Courier New', monospace;
        }
        
        .invite-code-display .badge {
            font-size: 1.2rem;
            letter-spacing: 2px;
        }
        
        @media (max-width: 768px) {
            .invite-code-display .badge {
                font-size: 1rem;
                letter-spacing: 1px;
            }
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-md">
        <div class="container">
            <a class="navbar-brand fw-bold brand-title" href="/">مدونات آفاق</a>
            <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">                <ul class="navbar-nav ms-auto gap-1 mb-1 mb-md-0">
                    <a href="/" class="btn btn-outline-dark btn-small">الرئيسية</a>
                    <a href="/blogs" class="btn btn-outline-dark btn-small">المدونات</a>
                    <a href="/about" class="btn btn-outline-dark btn-small">عن المنصة</a>
                    <a href="/blog-request-status" class="btn btn-outline-dark btn-small">حالة الطلب</a>
                </ul>
                <div class="d-flex align-items-center gap-2">
                    <a href="/login" class="btn btn-outline-dark-log px-3 py-2 text-nowrap">تسجيل الدخول</a>
                    <a href="/blog-request" class="btn btn-primary px-3 py-2 text-nowrap">طلب إنشاء مدونة</a>
                </div>
            </div>
        </div>
    </nav>

    <main>
        <div class="container">
            <div class="page-header">
                <h1>حالة طلب المدونة</h1>
                <p>تحقق من حالة طلبك لإنشاء مدونة على منصتنا</p>
            </div>

            <div class="status-container">
                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <%= error %>
                    </div>
                <% } %>

                <% if (!request) { %>
                    <div class="search-form">
                        <h3 class="mb-3">البحث عن طلبك</h3>
                        <form method="POST" action="/blog-request-status">
                            <div class="mb-3">
                                <label for="email" class="form-label">البريد الإلكتروني المستخدم في الطلب</label>
                                <input type="email" class="form-control" id="email" name="email" required
                                       placeholder="أدخل بريدك الإلكتروني">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>
                                البحث عن الطلب
                            </button>
                        </form>
                    </div>
                <% } else { %>
                    <div class="status-card status-<%= request.status %>">
                        <div class="text-center">
                            <% if (request.status === 'pending') { %>
                                <i class="fas fa-clock status-icon"></i>
                                <h3 class="text-warning">قيد المراجعة</h3>
                                <p>طلبك قيد المراجعة من قبل فريق المنصة. سيتم إشعارك بالنتيجة عبر البريد الإلكتروني.</p>                            <% } else if (request.status === 'approved') { %>
                                <i class="fas fa-check-circle status-icon"></i>
                                <h3 class="text-success">تم قبول الطلب</h3>
                                <p>تهانينا! تم قبول طلبك وإصدار كود دعوة للتسجيل.</p>
                                
                                <% if (inviteCode) { %>
                                    <div class="invite-code-section mt-4 p-3 bg-light border rounded">
                                        <h5 class="text-center mb-3">
                                            <i class="fas fa-key me-2"></i>
                                            كود الدعوة الخاص بك
                                        </h5>
                                        <div class="invite-code-display text-center mb-3">
                                            <span class="badge bg-primary fs-5 px-4 py-2 font-monospace" id="invite-code">
                                                <%= inviteCode.code %>
                                            </span>
                                            <button class="btn btn-outline-secondary btn-sm ms-2" onclick="copyInviteCode()">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                        
                                        <div class="invite-code-info">
                                            <p class="text-muted small mb-2">
                                                <i class="fas fa-clock me-1"></i>
                                                تاريخ انتهاء الصلاحية: 
                                                <%= new Date(inviteCode.expires_at).toLocaleDateString('ar-EG', {
                                                    year: 'numeric',
                                                    month: 'long',
                                                    day: 'numeric'
                                                }) %>
                                            </p>
                                            <% if (inviteCode.is_used) { %>
                                                <p class="text-success small mb-0">
                                                    <i class="fas fa-check me-1"></i>
                                                    تم استخدام هذا الكود
                                                </p>
                                            <% } else { %>
                                                <p class="text-warning small mb-0">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                                    لم يتم استخدام هذا الكود بعد
                                                </p>
                                            <% } %>
                                        </div>
                                        
                                        <div class="text-center mt-3">
                                            <a href="/register" class="btn btn-success">
                                                <i class="fas fa-user-plus me-2"></i>
                                                التسجيل الآن
                                            </a>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <div class="alert alert-info mt-3">
                                        <i class="fas fa-info-circle me-2"></i>
                                        تحقق من بريدك الإلكتروني للحصول على رمز الدعوة للتسجيل.
                                    </div>
                                <% } %>
                            <% } else if (request.status === 'rejected') { %>
                                <i class="fas fa-times-circle status-icon"></i>
                                <h3 class="text-danger">تم رفض الطلب</h3>
                                <p>للأسف، لم يتم قبول طلبك هذه المرة. يمكنك تقديم طلب جديد بعد تحسين المحتوى.</p>
                            <% } %>
                        </div>

                        <div class="request-details">
                            <h5 class="mb-3">تفاصيل الطلب</h5>
                            <div class="detail-row">
                                <span class="detail-label">رقم الطلب:</span>
                                <span class="detail-value">#<%= request.id %></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">الاسم:</span>
                                <span class="detail-value"><%= request.full_name %></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">التخصص:</span>
                                <span class="detail-value"><%= request.specialty %></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">تاريخ التقديم:</span>
                                <span class="detail-value">
                                    <%= new Date(request.created_at).toLocaleDateString('ar-EG', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric'
                                    }) %>
                                </span>
                            </div>
                            <% if (request.reviewed_at) { %>
                                <div class="detail-row">
                                    <span class="detail-label">تاريخ المراجعة:</span>
                                    <span class="detail-value">
                                        <%= new Date(request.reviewed_at).toLocaleDateString('ar-EG', {
                                            year: 'numeric',
                                            month: 'long',
                                            day: 'numeric'
                                        }) %>
                                    </span>
                                </div>
                            <% } %>
                        </div>

                        <% if (request.status === 'rejected' && request.rejection_reason) { %>
                            <div class="rejection-reason">
                                <strong>سبب الرفض:</strong><br>
                                <%= request.rejection_reason %>
                            </div>
                        <% } %>

                        <% if (request.status === 'rejected') { %>
                            <div class="text-center mt-3">
                                <a href="/blog-request" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>
                                    تقديم طلب جديد
                                </a>
                            </div>
                        <% } %>
                    </div>

                    <div class="text-center">
                        <a href="/blog-request-status" class="btn btn-outline-secondary">
                            <i class="fas fa-search me-2"></i>
                            البحث عن طلب آخر
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <footer>
        مدونات آفاق | منصة للتدوين الثقافي والفكري © <%= new Date().getFullYear() %>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>    <script>
        // تأثيرات الحركة
        window.addEventListener('scroll', () => {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
        
        // نسخ كود الدعوة
        function copyInviteCode() {
            const inviteCode = document.getElementById('invite-code').innerText;
            
            if (navigator.clipboard) {
                navigator.clipboard.writeText(inviteCode).then(() => {
                    showCopyFeedback();
                }).catch(err => {
                    console.error('فشل في نسخ الكود: ', err);
                    fallbackCopyTextToClipboard(inviteCode);
                });
            } else {
                fallbackCopyTextToClipboard(inviteCode);
            }
        }
        
        // طريقة بديلة للنسخ
        function fallbackCopyTextToClipboard(text) {
            const textArea = document.createElement("textarea");
            textArea.value = text;
            textArea.style.top = "0";
            textArea.style.left = "0";
            textArea.style.position = "fixed";
            
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            
            try {
                document.execCommand('copy');
                showCopyFeedback();
            } catch (err) {
                console.error('فشل في نسخ الكود', err);
            }
            
            document.body.removeChild(textArea);
        }
        
        // إظهار رسالة تأكيد النسخ
        function showCopyFeedback() {
            const button = event.target.closest('button');
            const originalHTML = button.innerHTML;
            
            button.innerHTML = '<i class="fas fa-check"></i>';
            button.classList.add('btn-success');
            button.classList.remove('btn-outline-secondary');
            
            setTimeout(() => {
                button.innerHTML = originalHTML;
                button.classList.remove('btn-success');
                button.classList.add('btn-outline-secondary');
            }, 2000);
        }
    </script>
</body>
</html>
